<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/recitplanformation/db" VERSION="20190303" COMMENT="XMLDB file for URL module"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="recittp" COMMENT="Main table">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="teacher id"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="description" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

     <TABLE NAME="recittp_activities" COMMENT="">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="time_to_complete" TYPE="int" LENGTH="15" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="tid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="recittrainingplans id"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fkcourse" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS ="id"/>
        <KEY NAME="fktid" TYPE="foreign" FIELDS="tid" REFTABLE="recittp" REFFIELDS ="id"/>
      </KEYS>
    </TABLE>

     <TABLE NAME="recittp_assignments" COMMENT="">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="tid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" />
        <FIELD NAME="gid" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" />
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="student"/>
        <FIELD NAME="worktimeweek" TYPE="int" LENGTH="15" NOTNULL="true" DEFAULT="0" SEQUENCE="false" />
        <FIELD NAME="timestart" TYPE="int" LENGTH="15" NOTNULL="true" DEFAULT="0" SEQUENCE="false" />
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fktid" TYPE="foreign" FIELDS="tid" REFTABLE="recittg" REFFIELDS ="id"/>
      </KEYS>
    </TABLE>

  </TABLES>
</XMLDB>